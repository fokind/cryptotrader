<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:form="sap.ui.layout.form"
  xmlns:core="sap.ui.core" >
  <Dialog id="dialog"
    title="Strategy">
    <content>
      <form:SimpleForm
        editable="true"
        layout="ResponsiveGridLayout">
        <form:content>
          <Label text="Name"/>
          <Input value="{draft>/name}"/>
          <Label text="Indicator name"/>
          <Input value="{draft>/indicatorName}"/>
          <Label text="Indicator options"/>
          <Input value="{draft>/indicatorOptions}"/>
        </form:content>
      </form:SimpleForm>
    </content>
    <beginButton>
      <Button text="OK" press=".onOk"/>
    </beginButton>
    <endButton>
      <Button text="Cancel" press=".onCancel"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
